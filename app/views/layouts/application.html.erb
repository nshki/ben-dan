<!DOCTYPE html>
<html>
  <head>
    <title>Ben Dan</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%=
      stylesheet_link_tag \
        'application',
        'data-turbolinks-track': 'reload',
        media: 'all'
    %>
    <%= javascript_pack_tag('application', 'data-turbolinks-track': 'reload') %>
  </head>

  <body>
    <menu class="menu">
      <h1 class="menu__logo">
        <%= link_to('Ben Dan', root_path) %>
      </h1><!-- .menu__logo -->

      <ul class="menu__items">
        <% if signed_in? %>
          <li class="menu__item">
            <%= link_to('Games', games_path) %>
          </li><!-- .menu__item -->
        <% end %>
      </ul><!-- .menu__items -->

      <ul class="menu__items">
        <% if signed_in? %>
          <li class="menu__item">
            <%= link_to('Logout', session_path(-1), method: :delete) %>
          </li><!-- .menu__item -->
        <% else %>
          <li class="menu__item">
            <%= link_to('Login', new_session_path) %>
          </li><!-- .menu__item -->
        <% end %>
      </ul><!-- .menu__items -->
    </menu><!-- .menu -->

    <%= yield %>
  </body>
</html>
