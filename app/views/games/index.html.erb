<p>
  <%=
    link_to('Challenge a Friend', friends_path, class: 'button button--alt')
  %>
</p>

<% if @games.any? %>
  <ul>
    <% @games.each do |game| %>
      <li>
        <%=
          link_to \
            "Game with #{game.opponent_of(current_user)}",
            edit_game_path(game)
        %>
      </li>
    <% end %>
  </ul>
<% end %>
