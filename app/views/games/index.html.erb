<%= link_to('New Game', new_game_path) %>

<% if @games.any? %>
  <ul>
    <% @games.each do |game| %>
      <li>
        <%=
          link_to \
            "Game with #{game.users.where.not(id: current_user.id).first.username}",
            edit_game_path(game)
        %>
      </li>
    <% end %>
  </ul>
<% end %>
